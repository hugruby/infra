#cloud-config
coreos:
  units:
    - name: "terratec.service"
      command: "start"
      content: |
        [Unit]
        Description = DevOps demo
        After = docker.service

        [Service]
        ExecStartPre=/bin/sh -c 'systemctl set-enviroment ARTIFACT_ID=$$(/usr/bin/docker images --format "{{.Repository}}:{{.Tag}}")'
        ExecStart= /usr/bin/docker run -d -p 3000:3000 ${ARTIFACT_ID}
